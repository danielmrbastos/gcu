<%= simple_form_for @fluxo, :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
		<legend><%= title %></legend>
		<%= error_messages @fluxo %>
 
    <%= f.input :nome %>
 
    <%= f.input :caso_de_uso_id %>
 
		<div class="form-actions">
	 		<%= f.button :submit, 'Salvar', :class => 'btn-primary' %>
			<%= link_to 'Cancelar', fluxos_path, :class => 'btn' %>
		</div>
  </fieldset>
<% end %>

