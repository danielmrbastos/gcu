  <fieldset>
		<legend><%= title %></legend>
		<%= error_messages @projeto %>

    <%= f.input :nome %>
    <%= f.input :ind_ativo %>
		<%= f.input :fator_tecnico, :as => "string" %>
		<%= f.input :fator_ambiental %>

		<div class="form-actions">
	 		<%= f.button :submit, 'Salvar', :class => 'btn-primary' %>
			<%= link_to 'Cancelar', projetos_path, :class => 'btn' %>
		</div>
  </fieldset>
<% end %>
