<%= simple_form_for @passo, :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
		<legend><%= title %></legend>
		<%= error_messages @passo %>
 
    <%= f.input :nome %>
 
    <%= f.input :fluxo_id %>
 
		<div class="form-actions">
	 		<%= f.button :submit, 'Salvar', :class => 'btn-primary' %>
			<%= link_to 'Cancelar', passos_path, :class => 'btn' %>
		</div>
  </fieldset>
<% end %>

