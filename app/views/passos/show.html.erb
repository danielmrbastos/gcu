<h1><%= @passo %></h1>
<%= show_for @passo do |s| %>
  <%= s.attribute :nome %>
  <%= s.attribute :fluxo_id %>

<% end %>
<div class="form-actions">
	<%= link_to 'Editar', edit_passo_path(@passo), :class => 'btn' %>
	<%= link_to 'Novo', new_passo_path, :class => 'btn' %>
	<%= link_to 'Ver lista', passos_path, :class => 'btn' %>
</div>
