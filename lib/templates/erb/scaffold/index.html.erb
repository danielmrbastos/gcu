<h1><%= plural_table_name %></h1>
<table class="table table-striped">
  <thead>
	  <tr>
		  <% attributes.each do |attribute| %>
	    <th><%= attribute.human_name %></th>
		  <% end %>
	    <th>Ações</th>
	 	</tr>
  </thead>
  <tbody>
<%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  	<tr>
<% attributes.each do |attribute| %>
  <% if attribute == attributes.first %>
    	<td><%%= link_to <%= singular_table_name %>.<%= attribute.name %>, <%= singular_table_name %> %></td>
  <% else %>
    	<td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
  <% end %>
<% end %>
    	<td>
      	<%%= link_to icon_tag('iconx-pencil'), edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :title => 'Editar', :class => 'with-tip' %>
      	<%%= link_to icon_tag('iconx-remove'), <%= singular_table_name %>, <%= key_value :confirm, "'Você tem certeza?'" %>, <%= key_value :method, ":delete" %>, :title => 'Excluir', :class => 'with-tip' %>
    	</td>
  	</tr>
<%% end %>
  </tbody>
</table>
<%%= paginate @<%= plural_table_name %> %>
<%%= link_to icon_tag('icon-plus') + ' Nova <%= singular_table_name %>', new_<%= singular_table_name %>_path, :class => 'btn btn-primary' %>
